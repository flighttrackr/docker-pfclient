name: Build

on:
  push:
    branches-ignore:
      - 'main'
      - 'dependabot/**'
    tags-ignore:
      - '*'
  pull_request:
    types:
      - opened
      - reopened
      - synchronize

jobs:
  call-workflow:
    name: Centralized workflow
    uses: flighttrackr/workflows/.github/workflows/build-with-upstream.yml@main
    with:
      hub_repo: flighttrackr
      hub_image: TPL_PROJECT
      image_authors: Dennis Neufeld <git@dneufeld.net>
      image_title: TPL_PROJECT
      image_description: Dockerized TPL_PROJECT
      image_licenses: MIT
